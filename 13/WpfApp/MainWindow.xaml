<Window x:Class="StudentDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentDiary"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Электронный дневник" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:GradeValidationRule x:Key="GradeValidator"/>
        <Style TargetType="ComboBox">
            <Setter Property="ItemsSource" Value="{Binding AllSubjects}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <TabControl>
            <!-- Вкладка с журналом оценок -->
            <TabItem Header="Журнал">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель фильтрации -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="Фильтр по дате:" 
                                   VerticalAlignment="Center" 
                                   Margin="0 0 5 0"/>
                        <DatePicker x:Name="StartDate" 
                                   Width="120" 
                                   Margin="0 0 5 0"/>
                        <TextBlock Text="-" 
                                   VerticalAlignment="Center" 
                                   Margin="0 0 5 0"/>
                        <DatePicker x:Name="EndDate" 
                                   Width="120" 
                                   Margin="0 0 10 0"/>
                        <Button Content="Применить фильтр" 
                               Click="ApplyFilter_Click"/>
                    </StackPanel>

                    <!-- Таблица с оценками -->
                    <DataGrid x:Name="GradesGrid" 
                             Grid.Row="1"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             ItemsSource="{Binding Grades}"
                             IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Предмет" 
                                                Binding="{Binding Subject}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Дата" 
                                                Binding="{Binding Date, StringFormat=d}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Оценка" 
                                                Binding="{Binding Grade}" 
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка добавления оценок -->
            <TabItem Header="Добавить оценку">
                <Grid Margin="0 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поле предмета с автодополнением -->
                    <TextBlock Text="Предмет:" 
                              Grid.Row="0" 
                              Margin="5"/>
                    <ComboBox x:Name="SubjectInput" 
                              Grid.Row="0" 
                              Grid.Column="1" 
                              Margin="5"
                              IsEditable="True"
                              Text="{Binding NewSubject, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding AllSubjects}"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>

                    <!-- Поле даты -->
                    <TextBlock Text="Дата:" 
                              Grid.Row="1" 
                              Margin="5"/>
                    <DatePicker x:Name="DateInput" 
                               Grid.Row="1" 
                               Grid.Column="1" 
                               Margin="5"/>

                    <!-- Поле оценки с валидацией -->
                    <TextBlock Text="Оценка:" 
                              Grid.Row="2" 
                              Margin="5"/>
                    <TextBox x:Name="GradeInput" 
                            Grid.Row="2" 
                            Grid.Column="1" 
                            Margin="5">
                        <TextBox.Text>
                            <Binding Path="Text" 
                                   UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:GradeValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="ToolTip" 
                                              Value="{Binding RelativeSource={RelativeSource Self}, 
                                                     Path=(Validation.Errors)[0].ErrorContent}"/>
                                        <Setter Property="BorderBrush" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Кнопка добавления -->
                    <Button Content="Добавить оценку" 
                           Grid.Row="3" 
                           Grid.ColumnSpan="2" 
                           Margin="5" 
                           Padding="10 3" 
                           HorizontalAlignment="Right"
                           Click="AddGrade_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>